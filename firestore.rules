rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Public read; create only allowed for the matching authenticated user
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if false; // Prevent name changes after creation
      allow delete: if false; // Prevent user deletion via client
    }

    // Public read; create only allowed for authenticated users writing their own uid
    match /sessions/{sessionId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
